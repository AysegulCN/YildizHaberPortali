<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Yıldız Haber Portalı Ana Sayfa">
    <meta name="author" content="">

    <title>YILDIZ HABER | @ViewData["Title"]</title>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <link href="~/css/site.css" rel="stylesheet" />

</head>

<body id="page-top">

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">

            
            <nav class="navbar navbar-expand-lg navbar-light bg-white topbar mb-4 shadow">
                <div class="container">

                    <a class="navbar-brand text-primary font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-star text-warning"></i> YILDIZ HABER
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNav">

                        @await Component.InvokeAsync("CategoryMenu")

                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-area="Identity" asp-controller="Account" asp-action="Login" id="loginLink">
                                    <i class="fas fa-user-shield"></i> Yönetici Girişi
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </nav>

            <div class="container">

                @RenderBody()
            </div>
        </div>

        <footer class="sticky-footer bg-white mt-5">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Yıldız Haber Portalı @DateTime.Now.Year</span>
                </div>
            </div>
        </footer>
    </div>

    
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    @RenderSection("Scripts", required: false)

</body>

</html>