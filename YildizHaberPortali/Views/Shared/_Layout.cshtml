@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Yıldız Haber Portalı Ana Sayfa">
    <meta name="author" content="">

    <title>YILDIZ HABER | @ViewData["Title"]</title>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

</head>

<body id="page-top">

    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-white topbar mb-4 shadow">
                <div class="container">

                    <a class="navbar-brand text-nowrap font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-star text-warning mr-1"></i>YILDIZ HABER
                    </a>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNav">

                        @await Component.InvokeAsync("CategoryMenu")

                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">İletişime Geç</a>
                            </li>
                        </ul>

                        <partial name="_LoginPartial" />

                    </div>
                </div>
            </nav>
            <div class="container">
                @RenderBody()
            </div>

        </div>

        <footer class="sticky-footer bg-white mt-5">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Yıldız Haber Portalı @DateTime.Now.Year</span>
                </div>
            </div>
        </footer>
    </div>

    <a class="scroll-to-top rounded-circle shadow-lg bg-primary text-white" href="#page-top" id="backToTop" style="display:none; position:fixed; bottom:20px; right:20px; width:50px; height:50px; text-align:center; line-height:50px; z-index:999;">
        <i class="fas fa-chevron-up"></i>
    </a>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        // Toastr Ayarları
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right", // Düzeltildi: Buraya virgül eklendi
            "timeOut": "5000"
        };

        // Mesaj Kontrolü
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                    toastr.success('@TempData["SuccessMessage"]', 'Başarılı!');
                </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                    toastr.error('@TempData["ErrorMessage"]', 'Hata!');
                </text>
        }
                $(window).scroll(function() {
            if ($(this).scrollTop() > 300) {
                $('#backToTop').fadeIn();
            } else {
                $('#backToTop').fadeOut();
            }
        });

    </script>

    @RenderSection("Scripts", required: false)

</body>
</html>