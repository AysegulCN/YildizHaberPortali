<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>YILDIZ HABER | @ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    @* 🚀 Bootstrap CDN: Stil dosyasının her zaman yüklenmesini sağlar *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <style>
        .nav-link {
            font-weight: 600;
            color: #333 !important;
        }

            .nav-link:hover {
                color: #ffc107 !important;
            }

        .dropdown-toggle::after {
            color: #ffc107;
        }
        /* Ok işaretini sarı yap */
    </style>
</head>

<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm mb-4 py-2">
        <div class="container">
            @* 🌟 Logo Kırılma Fix *@
            <a class="navbar-brand font-weight-bold d-flex align-items-center text-nowrap" asp-controller="Home" asp-action="Index">
                <span class="text-warning mr-2"><i class="fas fa-star"></i></span> YILDIZ HABER
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav mx-auto align-items-center">
                    @* 🚀 KATEGORİLER (Stray '}' ve ']' temizlendi) *@
                    @await Component.InvokeAsync("CategoryMenu")
                    @* 🚀 İLETİŞİM: Tam hizada! *@
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" asp-controller="Contact" asp-action="Index">İletişim</a>
                    </li>
                </ul>

                <div class="ml-auto">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    @* 🚀 SCRİPT SIRALAMASI: Menülerin açılması için KRİTİK sıra *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

    <script>
        toastr.options = { "closeButton": true, "progressBar": true, "positionClass": "toast-top-right", "timeOut": "5000" };
        var connection = new signalR.HubConnectionBuilder().withUrl("/newsHub").build();
        connection.on("ReceiveNotification", function (u, m) { toastr.warning(u + ": " + m, "Yeni Bildirim!"); });
        connection.start().catch(err => console.error(err.toString()));
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>