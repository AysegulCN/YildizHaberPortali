@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    // 🚀 CS0103 HATASINI BU SATIR ÇÖZER
    var currentUser = await UserManager.GetUserAsync(User);
}

<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        @* 🛡️ YÖNETİCİ PANELİ: Sadece Admin ve Yazar görebilir *@
        @if (User.IsInRole("Admin") || User.IsInRole("Yazar"))
        {
            <li class="nav-item mr-3">
                <a class="btn btn-outline-danger btn-sm rounded-pill px-3 font-weight-bold shadow-sm"
                   asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-tools mr-1"></i> YÖNETİCİ PANELİ
                </a>
            </li>
        }

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark font-weight-bold" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                <i class="fas fa-user-circle text-primary mr-1"></i>
                @(currentUser?.FullName ?? User.Identity.Name)
            </a>
            <div class="dropdown-menu dropdown-menu-right shadow-lg border-0 animated--fade-in" style="border-radius: 15px;">
                @* 🚀 İSİM DÜZELTİLDİ: Hesap Ayarları *@
                <a class="dropdown-item py-2" asp-controller="Account" asp-action="Profile">
                    <i class="fas fa-user-cog fa-sm fa-fw mr-2 text-primary"></i> Hesap Ayarları
                </a>
                <div class="dropdown-divider"></div>
                @* 🚀 İSİM DÜZELTİLDİ: Güvenli Çıkış *@
                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                    <button type="submit" class="dropdown-item text-danger py-2">
                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2"></i> Güvenli Çıkış
                    </button>
                </form>
            </div>
        </li>
    }
    else
    {
        @* 🚀 GERİ GELEN BUTONLAR *@
        <li class="nav-item">
            <a class="nav-link text-dark font-weight-bold px-3" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-sign-in-alt mr-1 text-primary"></i> Giriş Yap
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark font-weight-bold px-3" asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-user-plus mr-1 text-success"></i> Kayıt Ol
            </a>
        </li>
    }
</ul>