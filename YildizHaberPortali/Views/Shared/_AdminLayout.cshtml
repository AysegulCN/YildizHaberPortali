@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Yıldız Haber Admin | @ViewData["Title"]</title>

    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        .premium-card {
            border-radius: 20px;
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05) !important;
            overflow: hidden;
        }

            .premium-card .card-header {
                background: #fff;
                border-bottom: 1px solid #f0f2f5;
                padding: 20px;
                font-weight: bold;
                color: #4e73df;
            }

        .premium-table {
            border-collapse: separate;
            border-spacing: 0 12px;
            width: 100%;
        }

            .premium-table tbody tr {
                background: #fff;
                box-shadow: 0 4px 10px rgba(0,0,0,0.03);
                border-radius: 15px;
                transition: all 0.3s ease;
            }

                .premium-table tbody tr:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 8px 20px rgba(78,115,223,0.1);
                }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body id="page-top">
    <div id="wrapper">
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Dashboard" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15"><i class="fas fa-star text-warning"></i></div>
                <div class="sidebar-brand-text mx-3">YILDIZ HABER <sup>Admin</sup></div>
            </a>

            <hr class="sidebar-divider my-0">

            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index" target="_blank">
                    <i class="fas fa-fw fa-external-link-alt"></i><span>Siteyi Görüntüle</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i><span>Kontrol Paneli</span>
                </a>
            </li>

            <hr class="sidebar-divider">
            <div class="sidebar-heading">İÇERİK YÖNETİMİ</div>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseHaber">
                    <i class="fas fa-fw fa-newspaper"></i><span>Haber İşlemleri</span>
                </a>
                <div id="collapseHaber" class="collapse" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <a class="collapse-item" asp-controller="News" asp-action="Index">Haber Listesi</a>
                        <a class="collapse-item" asp-controller="News" asp-action="Create">Yeni Haber Ekle</a>
                    </div>
                </div>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Index">
                        <i class="fas fa-fw fa-layer-group"></i><span>Kategori Yönetimi</span>
                    </a>
                </li>
            }

            <li class="nav-item">
                <a class="nav-link" asp-controller="Comment" asp-action="Index">
                    <i class="fas fa-fw fa-comments"></i>
                    <span>Yorumlar</span>
                </a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <hr class="sidebar-divider">
                <div class="sidebar-heading">SİSTEM AYARLARI</div>

                <li class="nav-item">
                    <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUser" aria-expanded="true" aria-controls="collapseUser">
                        <i class="fas fa-fw fa-users-cog"></i>
                        <span>Yetkilendirme</span>
                    </a>
                    <div id="collapseUser" class="collapse" aria-labelledby="headingUser" data-parent="#accordionSidebar">
                        <div class="bg-white py-2 collapse-inner rounded">
                            <a class="collapse-item" asp-controller="User" asp-action="Index">Kullanıcı Listesi</a>
                            <a class="collapse-item" asp-controller="Role" asp-action="Index">Rol Yönetimi</a>
                            <a class="collapse-item" asp-controller="User" asp-action="Writers">Yazar Kadrosu</a>
                        </div>
                    </div>
                </li>
            }

            <hr class="sidebar-divider d-none d-md-block">
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3"><i class="fa fa-bars"></i></button>

                    <ul class="navbar-nav ml-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 font-weight-bold">
                                        <i class="fas fa-sparkles text-warning mr-1"></i> Hoş Geldin, @(currentUser?.FullName ?? "Kullanıcı")!
                                    </span>
                                    <img id="header-profile-img" class="img-profile rounded-circle border shadow-sm"
                                         src="~/img/@(currentUser?.ProfilePicture ?? "undraw_profile.svg")"
                                         style="width:35px; height:35px; object-fit: cover;">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in">
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i> Profilim
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger"><i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-danger"></i>Güvenli Çıkış</button>
                                    </form>
                                </div>
                            </li>
                        }
                    </ul>
                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/js/sb-admin-2.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/newsHub").build();
        connection.on("ReceiveNotification", function (user, message) {
            alert("📢 Yeni Bildirim!\n" + user + ": " + message);
        });
        connection.start().catch(function (err) { return console.error(err.toString()); });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>