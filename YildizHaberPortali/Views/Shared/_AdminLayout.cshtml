<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Yıldız Haber Portalı Yönetim Paneli">
    <meta name="author" content="">

    <title>Yıldız Haber Admin Paneli | @ViewData["Title"]</title>

    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false) @* İsteğe bağlı, sayfa özel CSS'leri için *@

</head>

<body id="page-top">

    <div id="wrapper">

        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="" asp-controller="Admin" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-star"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Yıldız Haber</div>
            </a>

            <hr class="sidebar-divider my-0">

            <li class="nav-item active">
                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Yönetici Paneli</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">
                İÇERİK YÖNETİMİ (CRUD)
            </div>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Category" asp-action="Index">
                    <i class="fas fa-fw fa-tags"></i>
                    <span>Kategori Yönetimi</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="News" asp-action="Index">
                    <i class="fas fa-fw fa-newspaper"></i>
                    <span>Haber Yönetimi</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">
                SİSTEM VE YETKİLENDİRME
            </div>

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseIdentity"
                   aria-expanded="true" aria-controls="collapseIdentity">
                    <i class="fas fa-fw fa-users-cog"></i>
                    <span>Kullanıcı & Roller</span>
                </a>
                <div id="collapseIdentity" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Yetkilendirme:</h6>
                        <a class="collapse-item" href="#">Rol Yönetimi (Rollere Yetki)</a>
                        <a class="collapse-item" href="#">Kullanıcı Hesapları</a>
                        <a class="collapse-item" href="#">SignalR Test (Ödev)</a>
                    </div>
                </div>
            </li>

            <hr class="sidebar-divider d-none d-md-block">

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                </nav>
                <div class="container-fluid">
                    @* BURASI DİNAMİK İÇERİK ALANI *@
                    @RenderBody()

                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Yildiz Haber Portalı @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/admin/js/sb-admin-2.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>

</html>