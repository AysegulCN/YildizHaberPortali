@model IEnumerable<YildizHaberPortali.Models.Contact>
@{
    ViewData["Title"] = "Gelen İhbarlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4 border-0" style="border-radius: 20px;">
    <div class="card-header py-3 bg-white d-flex justify-content-between align-items-center" style="border-radius: 20px 20px 0 0;">
        <h6 class="m-0 font-weight-bold text-warning"><i class="fas fa-inbox mr-2"></i> Gelen Mesajlar ve İhbarlar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="text-secondary small font-weight-bold">
                    <tr>
                        <th>Tarih</th>
                        <th>Gönderen</th>
                        <th>Konu</th>
                        <th class="text-center">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="msg-@item.Id">
                            <td class="small">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <span class="font-weight-bold">@item.Name</span><br>
                                <small class="text-muted">@item.Email</small>
                            </td>
                            <td><span class="badge badge-warning text-white p-2">@item.Subject</span></td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info btn-circle shadow-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @* 🚀 AJAX SİLME BUTONU *@
                                <button onclick="deleteMsg(@item.Id)" class="btn btn-sm btn-danger btn-circle shadow-sm ml-1">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteMsg(id) {
            if(confirm("Bu ihbar mesajını silmek istediğine emin misin?")) {
                $.post("/Contact/Delete", { id: id }, function (res) {
                    if (res.success) {
                        $("#msg-" + id).fadeOut(600); // AJAX ile satırı uçur
                        toastr.error("Mesaj silindi.");
                    }
                });
            }
        }
    </script>
}
