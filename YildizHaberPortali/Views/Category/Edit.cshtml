@model YildizHaberPortali.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"] - @Model.Name</h6>
    </div>
    <div class="card-body">

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Güncelleme için ID'nin gizli bir alanda taşınması zorunludur *@
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Kategori Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Slug" class="control-label">SEO Slug</label>
                @* Slug'ı sadece gösteriyoruz, manuel düzenlemeyi engellemek için readonly yaptık. *@
                <input asp-for="Slug" class="form-control" readonly="readonly" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}