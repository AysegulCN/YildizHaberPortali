@model YildizHaberPortali.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategoriyi Düzenle: @Model.Name</h6>
    </div>
    <div class="card-body">

        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">

                    <div class="form-group">
                        <label asp-for="Name" class="control-label font-weight-bold">Kategori Adı</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Slug" class="control-label font-weight-bold">URL Adresi (Slug)</label>
                        <input asp-for="Slug" class="form-control" />
                        <small class="form-text text-muted">Örn: spor-haberleri (Otomatik veya manuel girebilirsin)</small>
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>

                    <hr />

                    <div class="form-group">
                        <button type="submit" class="btn btn-warning btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-edit"></i>
                            </span>
                            <span class="text">Değişiklikleri Kaydet</span>
                        </button>

                        <a asp-action="Index" class="btn btn-secondary btn-icon-split ml-2">
                            <span class="icon text-white-50">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span class="text">Listeye Dön</span>
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}