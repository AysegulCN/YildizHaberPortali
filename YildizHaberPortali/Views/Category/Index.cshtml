@model IEnumerable<YildizHaberPortali.Models.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* AJAX POST İSTEĞİ İÇİN GEREKLİ GÜVENLİK TOKENI *@
@Html.AntiForgeryToken()

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Kategori Ekle
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategoriler Tablosu</h6>
    </div>
    <div class="card-body">

        @* GERİ YÜKLEME MESAJI BURADA GÖRÜNECEK *@
        <div id="undo-notification-container">
            @* AJAX kodu buraya mesajı ekleyecek *@
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Adı</th>
                        <th>Slug (URL Adresi)</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @* HATA DÜZELTİLDİ: Artık 'item' kullanılıyor *@
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.Id">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Slug</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>

                                @* SİL BUTONUNA YENİ FONKSİYONU BAĞLADIK *@
                                <button class="btn btn-danger btn-sm" onclick="deleteItem(@item.Id, 'Category')">Sil</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        // Geri alma işleminde kullanılacak zamanlayıcılar ve silinecek öğenin ID'si
        var deleteTimeouts = {};
        var itemToDeleteId = null;

        // Genel Silme Fonksiyonu
        function deleteItem(id, controllerName) {

            if (confirm("Bu öğeyi silmek istediğinizden emin misiniz?")) {

                var rowElement = $('#row_' + id);
                itemToDeleteId = id; // Geri yükleme için ID'yi global değişkene ata

                // 1. Satırı Gizle
                rowElement.hide();

                // 2. Geri Yükle Bildirimini Göster
                var notificationBar = $('<div id="undo-notification" class="alert alert-info text-center" role="alert" style="position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%); z-index: 1000; width: 400px; padding: 10px;"></div>');

                $('body').append(notificationBar);

                // 3. Geri Sayımı Başlat
                var countdown = 5;
                var interval = setInterval(function() {
                    countdown--;
                    if (countdown >= 0) {
                        notificationBar.html('Öğe silindi. <a href="javascript:void(0)" onclick="undoDelete(\'' + controllerName + '\')" style="color: red; text-decoration: underline;">Geri Yükle</a> (' + countdown + ' sn)');
                    }
                }, 1000); // Her saniye güncelle

                // 4. Zamanlayıcıyı Ayarla (5 saniye sonra kesin silme)
                deleteTimeouts[id] = setTimeout(function() {
                    clearInterval(interval);
                    finalizeDelete(id, controllerName);
                }, 5000);
            }
        }

        // Geri Yükle Butonuna Basıldığında Çalışır
        function undoDelete(controllerName) {
            if (itemToDeleteId) {

                // 1. Kesin silme zamanlayıcısını durdur
                clearTimeout(deleteTimeouts[itemToDeleteId]);

                // 2. Satırı görünür yap
                $('#row_' + itemToDeleteId).show();

                // 3. Bildirim çubuğunu gizle
                $('#undo-notification').remove();

                alert("Silme işlemi geri alındı.");

                itemToDeleteId = null; // ID'yi sıfırla
            }
        }

        // 5 Saniye Sonunda Sunucuya Silme İsteği Gönderir
        function finalizeDelete(id, controllerName) {

            // 1. Sunucuya AJAX isteği gönder
            $.ajax({
                type: "POST",
                url: "/" + controllerName + "/DeleteConfirmed",
                data: { id: id },
                headers: {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        // Sayfadan tamamen kaldır
                        $('#row_' + id).remove();
                    } else {
                        // Hata olursa satırı geri göster
                        alert("Kesin silme başarısız oldu. Öğe geri yüklenecektir.");
                        $('#row_' + id).show();
                    }
                },
                error: function () {
                    alert("Kesin silme sırasında sunucu hatası. Öğe geri yüklenecektir.");
                    $('#row_' + id).show();
                }
            });

            // Bildirim çubuğunu gizle
            $('#undo-notification').remove();
        }
    </script>
}