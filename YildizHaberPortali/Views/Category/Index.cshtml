@model IEnumerable<YildizHaberPortali.Models.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Kategori Ekle
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kategoriler Tablosu</h6>
    </div>
    <div class="card-body">

        <div id="undo-container" class="alert alert-warning" style="display:none; position:fixed; bottom:20px; right:20px; z-index:1000;">
        </div>

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Adı</th>
                        <th>Slug (URL Adresi)</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @* Hata kaynağı olan döngü değişkeni düzeltildi *@
                    @foreach (var item in Model)
                    {
                        <tr id="row_@category.Id">
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.Slug</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Düzenle</a>

                                <button class="btn btn-danger btn-sm" onclick="deleteItem(@category.Id, 'Category')">Sil</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

// Views/Category/Index.cshtml veya Views/News/Index.cshtml dosyalarının en altına

@section Scripts {
    <script>
        // Genel Silme Fonksiyonu
        function deleteItem(id, controllerName) {

            if (confirm("Bu öğeyi silmek istediğinizden emin misiniz?")) {

                $.ajax({
                    type: "POST",
                    url: "/" + controllerName + "/DeleteConfirmed", // POST metodunu çağıracağız
                    data: { id: id },
                    headers: {
                        // AJAX POST isteği için Anti-Forgery Token (güvenlik)
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        // İşlem başarılı olursa
                        if (response.success) {
                            alert(response.message);

                            // Sayfadaki silinen satırı DOM'dan kaldır
                            $('#row_' + id).remove();

                        } else {
                            alert("Hata: " + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("Silme işleminde beklenmeyen bir hata oluştu: " + error);
                    }
                });
            }
        }
    </script>
}