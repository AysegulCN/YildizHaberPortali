@model YildizHaberPortali.Models.Category

@{
    ViewData["Title"] = "Kategori Silme Onayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">DİKKAT! Silme İşlemi Onayı</h6>
    </div>
    <div class="card-body">

        <h3 class="text-danger">Bu kategoriyi silmek istediğinizden emin misiniz?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Slug)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Slug)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Silme İşlemini Onayla" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
        </form>
    </div>
</div>