@using YildizHaberPortali.Models
@model News

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0 mb-4">
                    <li class="breadcrumb-item"><a href="/" class="text-primary">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active text-muted">@Model.Category?.Name</li>
                </ol>
            </nav>

            <h1 class="font-weight-bold mb-4" style="font-size: 2.8rem; line-height: 1.1; color: #1a1a1a;">@Model.Title</h1>

            <div class="d-flex align-items-center justify-content-between text-muted mb-4 py-3 border-top border-bottom">
                <div class="d-flex align-items-center">
                    <span class="mr-4"><i class="far fa-calendar-alt mr-2 text-primary"></i>@Model.CreatedDate.ToString("dd MMMM yyyy")</span>

                    @* 🚀 HATA ÇÖZÜMÜ: .FullName ekini sildik, sadece Model.Author kullanıyoruz *@
                    <div class="mr-3">
                        <i class="far fa-user mr-1 text-primary"></i> Editör: <b>@(Model.Author ?? "Yıldız Editör")</b>
                    </div>

                    <div>
                        <i class="far fa-comment-dots mr-1 text-primary"></i> @(((List<Comment>)ViewBag.Comments).Count) Yorum
                    </div>

                </div>

                <button id="btnReadAloud" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
                    <i class="fas fa-volume-up mr-1"></i> Dinle
                </button>
            </div>

            <div class="mb-5 shadow rounded-lg overflow-hidden border">
                <img src="~/img/@Model.ImageUrl" class="img-fluid w-100" style="max-height: 500px; object-fit: cover;" alt="@Model.Title">
            </div>

            <div class="news-content mb-5" style="font-size: 1.25rem; line-height: 1.9; color: #2c3e50; font-family: 'Georgia', serif;">
                @Html.Raw(Model.Content)
            </div>

            <div class="p-4 bg-light rounded-lg mb-5 border">
                <p class="font-weight-bold small text-muted text-uppercase mb-3">Haberi Sevdin mi? Paylaş:</p>
                <div class="d-flex">
                    <a href="https://twitter.com/share?url=@Context.Request.Path" target="_blank" class="btn btn-info btn-circle mr-2 shadow-sm"><i class="fab fa-twitter"></i></a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u=@Context.Request.Path" target="_blank" class="btn btn-primary btn-circle mr-2 shadow-sm" style="background-color: #3b5998;"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://wa.me/?text=@Context.Request.Path" target="_blank" class="btn btn-success btn-circle shadow-sm" style="background-color: #25d366;"><i class="fab fa-whatsapp"></i></a>
                </div>
            </div>

            <div class="comments-section">
                <h3 class="font-weight-bold mb-4 text-dark"><i class="fas fa-comments text-primary mr-2"></i> Okuyucu Sözü</h3>

                <div id="comments-list" class="mb-5">
                    @if (((List<Comment>)ViewBag.Comments).Any())
                    {
                        @foreach (var comment in (List<Comment>)ViewBag.Comments)
                        {
                            <div class="card border-0 shadow-sm mb-3" style="border-radius: 20px;">
                                <div class="card-body p-4">
                                    <div class="media">
                                        <img src="~/img/@(comment.User?.ProfilePicture ?? "undraw_profile.svg")"
                                             class="mr-3 rounded-circle border shadow-sm"
                                             style="width: 55px; height: 55px; object-fit: cover;">
                                        <div class="media-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h6 class="mt-0 font-weight-bold text-primary">@(comment.User?.FullName ?? "Okuyucu")</h6>
                                                <small class="text-muted">@comment.CreatedDate.ToString("dd.MM.yyyy")</small>
                                            </div>
                                            <p class="text-secondary mb-0 mt-2">@comment.Text</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-light border shadow-sm rounded-pill px-4 text-center">
                            <i class="fas fa-feather mr-2 text-primary"></i> Henüz yorum yapılmamış. İlk sözü sen söyle!
                        </div>
                    }
                </div>

                <div class="card border-0 shadow rounded-lg overflow-hidden">
                    <div class="card-header bg-primary text-white p-4">
                        <h5 class="mb-0 font-weight-bold"><i class="fas fa-pen-fancy mr-2"></i> Fikrini Paylaş</h5>
                    </div>
                    <div class="card-body p-4 bg-white">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Comment" asp-action="Create" method="post">
                                <input type="hidden" name="NewsId" value="@Model.Id" />
                                <div class="form-group mb-4">
                                    <textarea name="Text" class="form-control border-0 bg-light rounded-lg p-4"
                                          rows="4" placeholder="Düşüncelerinizi buraya yazın..." required
                                          style="font-size: 1.1rem; border-radius: 15px !important;"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block btn-lg rounded-pill shadow font-weight-bold">
                                    <i class="fas fa-paper-plane mr-2"></i> Yorumu Yayınla
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text-muted">Bu habere yorum yapabilmek için lütfen giriş yapın.</p>
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary rounded-pill px-5 font-weight-bold">Giriş Yap</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-5 mt-lg-0">
            <div class="sticky-top" style="top: 100px;">
                <div class="card border-0 shadow-sm rounded-lg mb-4 overflow-hidden">
                    <div class="card-header bg-dark text-white font-weight-bold p-3">
                        <i class="fas fa-fire mr-2 text-warning"></i> İlginizi Çekebilir
                    </div>
                    <div class="card-body p-4 text-center">
                        <p class="text-muted small italic mb-0">Takipte kal yol arkadaşım! ✨</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#btnReadAloud").click(function() {
            let content = $(".news-content").text();
            let speech = new SpeechSynthesisUtterance();
            speech.text = content;
            speech.lang = "tr-TR";
            window.speechSynthesis.speak(speech);
        });
    </script>
}