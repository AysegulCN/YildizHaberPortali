@using YildizHaberPortali.Models
@model News

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 mt-2">
    <div class="row">
        <div class="col-lg-8">

            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-light rounded-pill px-4 py-2 shadow-sm border-0">
                    <li class="breadcrumb-item"><a href="/" class="text-primary font-weight-bold">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active text-muted">@Model.Category?.Name</li>
                </ol>
            </nav>

            <h1 class="display-4 font-weight-bold mb-4" style="color: #1a1a1a; letter-spacing: -1px; line-height: 1.2;">@Model.Title</h1>

            <div class="d-flex align-items-center justify-content-between text-muted mb-5 py-3 border-top border-bottom">
                <div class="d-flex align-items-center">
                    <span class="mr-4 small"><i class="far fa-calendar-alt mr-2 text-primary"></i>@Model.CreatedDate.ToString("dd MMMM yyyy")</span>
                    <span class="mr-4 small"><i class="far fa-user mr-2 text-primary"></i>Editör: <b class="text-dark">@(Model.Author ?? "Yıldız Editör")</b></span>
                    <span class="small"><i class="far fa-comment-dots mr-2 text-primary"></i>@(((List<Comment>)ViewBag.Comments).Count) Yorum</span>
                </div>
                <button id="btnReadAloud" class="btn btn-primary btn-sm rounded-pill px-4 shadow-sm font-weight-bold">
                    <i class="fas fa-volume-up mr-1"></i> Dinle
                </button>
            </div>

            <div class="mb-5 shadow-lg overflow-hidden border-0" style="border-radius: 30px;">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="~/uploads/@Model.Image" class="img-fluid w-100" style="max-height: 500px; object-fit: cover;" alt="@Model.Title">
                }
                else
                {
                    <img src="~/img/no-image.png" class="img-fluid w-100" style="max-height: 500px; object-fit: cover;">
                }
            </div>

            <div class="news-content mb-5" style="font-size: 1.25rem; line-height: 1.9; color: #2c3e50; font-family: 'Segoe UI', sans-serif;">
                @Html.Raw(Model.Content)
            </div>

            <hr class="my-5" style="border-top: 2px dashed #eee;">

            <div class="comments-section mt-5 p-4 bg-white shadow-sm" style="border-radius: 20px;">

                <h4 class="font-weight-bold mb-4">
                    <i class="fas fa-comments text-primary mr-2"></i>
                    Yorumlar (@Model.Comments.Count(x => x.IsApproved))
                </h4>

                @if (Model.Comments.Any(x => x.IsApproved))
                {
                    @foreach (var comment in Model.Comments.Where(x => x.IsApproved).OrderByDescending(x => x.CreatedDate))
                    {
                        <div class="comment-item d-flex mb-4 p-3 border-bottom">
                            <div class="mr-3">
                                <img src="https://ui-avatars.com/api/?name=@comment.UserName&background=random&color=fff"
                                     class="rounded-circle shadow-sm"
                                     style="width: 50px; height: 50px; border: 2px solid #ffc107;"
                                     alt="@comment.UserName">
                            </div>

                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <h6 class="font-weight-bold mb-0 text-dark">@comment.UserName</h6>
                                    <small class="text-muted">
                                        <i class="far fa-clock mr-1"></i> @comment.CreatedDate.ToString("dd MMMM yyyy HH:mm")
                                    </small>
                                </div>
                                <p class="text-secondary mb-0">@comment.Text</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-light text-center py-4" style="border: 2px dashed #eee; border-radius: 15px;">
                        <i class="fas fa-comment-slash fa-2x text-muted mb-2"></i>
                        <p class="mb-0 text-muted">Henüz yayınlanmış bir yorum yok. İlk yorumu sen yap, editörümüz onaylasın! 🚀</p>
                    </div>
                }
            </div>

                <div class="card border-0 shadow-lg" style="border-radius: 25px; overflow: hidden;">
                    <div class="card-header bg-primary text-white py-3 px-4 border-0">
                        <h5 class="mb-0 font-weight-bold"><i class="fas fa-edit mr-2"></i>Fikrini Paylaş</h5>
                    </div>
                    <div class="card-body p-4 bg-light">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Comment" asp-action="Create" method="post">
                                <input type="hidden" name="NewsId" value="@Model.Id" />
                                <div class="form-group mb-4">
                                    <textarea name="Text" class="form-control border-0 shadow-sm p-4"
                                          rows="4" placeholder="Düşüncelerini buraya yaz..." required
                                          style="border-radius: 20px; font-size: 1.1rem;"></textarea>
                                </div>
                                <div class="text-right">
                                    <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow-lg font-weight-bold">
                                        Yorumu Yayınla <i class="fas fa-paper-plane ml-2"></i>
                                    </button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text-muted mb-3 font-italic">Düşüncelerini paylaşmak için aramıza katılmalısın. ✨</p>
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary rounded-pill px-5 font-weight-bold">Giriş Yap</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-5 mt-lg-0">
            <div class="sticky-top" style="top: 100px;">
                <div class="card border-0 shadow-sm mb-4" style="border-radius: 20px;">
                    <div class="card-header bg-dark text-white font-weight-bold p-3 border-0" style="border-radius: 20px 20px 0 0;">
                        <i class="fas fa-bolt text-warning mr-2"></i>İlginizi Çekebilir
                    </div>
                    <div class="card-body bg-light text-center py-5">
                        <p class="text-muted italic mb-0 px-3">Haberin devamındaki diğer içeriklerimiz için takipte kal yol arkadaşım! 🚀</p>
                    </div>
                </div>

                <div class="p-4 bg-primary text-white text-center shadow-sm" style="border-radius: 20px;">
                    <h6 class="font-weight-bold mb-0">Yıldız Haber 2025</h6>
                </div>
            </div>
        </div>
    </div>
</div>