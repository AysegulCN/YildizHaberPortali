@model YildizHaberPortali.Models.News

@{
    ViewData["Title"] = "Haber Silme Onayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">DİKKAT! Silme İşlemi Onayı</h6>
    </div>
    <div class="card-body">

        <h3 class="text-danger">"@Model.Title" başlıklı haberi silmek istediğinizden emin misiniz?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Başlık</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
            <dt class="col-sm-2">Kategori</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>
            <dt class="col-sm-2">İçerik</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Content)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Silme İşlemini Onayla" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
        </form>
    </div>
</div>