@model YildizHaberPortali.Models.ViewModels.NewsCreateViewModel

@{
    ViewData["Title"] = "Yeni Haber Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mx-2 mt-4" style="border-radius: 20px;">
    <div class="card-body p-4 bg-light" style="border-radius: 20px;">
        <h3 class="font-weight-bold text-primary mb-4">Yeni Haber Oluştur</h3>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-lg-8">
                    <div class="form-group mb-4">
                        <label asp-for="Title" class="font-weight-bold ml-2">Başlık</label>
                        <input asp-for="Title" class="form-control" style="border-radius:15px; padding:25px;" />
                        <span asp-validation-for="Title" class="text-danger small"></span> 
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Content" class="font-weight-bold ml-2">İçerik</label>
                        <textarea asp-for="Content" class="form-control" rows="10" style="border-radius:15px;"></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span> 
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="form-group mb-4">
                        <label asp-for="CategoryId" class="font-weight-bold">Kategori</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories" style="border-radius:15px;">
                            <option value="">-- Kategori Seç --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="p-3 bg-white mb-4 shadow-sm" style="border-radius:15px;">
                        <label class="font-weight-bold d-block mb-3">Yayın Durumu</label>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" asp-for="IsPublished" class="custom-control-input" id="stSw">
                            <label class="custom-control-label" for="stSw">Hemen Yayına Al</label>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ImageFile" class="font-weight-bold">Haber Görseli</label>
                        <input type="file" asp-for="ImageFile" class="form-control-file" />
                    </div>

                    <button type="submit" class="btn btn-primary btn-block p-3 font-weight-bold shadow" style="border-radius:50px;">Haberi Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> 
}

