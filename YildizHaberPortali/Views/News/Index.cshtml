@using YildizHaberPortali.Models
@model IEnumerable<News>

@{
    ViewData["Title"] = "Haber Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* 💎 Premium Tablo ve Kart Tasarımı */
    .premium-card {
        border-radius: 25px;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    .premium-table {
        border-collapse: separate;
        border-spacing: 0 15px;
        width: 100%;
    }

        .premium-table thead th {
            border: none;
            color: #858796;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            padding: 0 25px;
        }

        .premium-table tbody tr {
            background: #fff;
            box-shadow: 0 3px 10px rgba(0,0,0,0.02);
            transition: all 0.3s ease;
            border-radius: 15px;
        }

            .premium-table tbody tr:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(78,115,223,0.12);
            }

        .premium-table td {
            padding: 20px 25px !important;
            border: none !important;
            vertical-align: middle !important;
        }

            .premium-table td:first-child {
                border-radius: 15px 0 0 15px;
            }

            .premium-table td:last-child {
                border-radius: 0 15px 15px 0;
            }

    /* Filtre Butonları */
    .filter-btn {
        transition: all 0.3s ease;
        border-width: 2px;
    }

        .filter-btn.active {
            box-shadow: 0 4px 15px rgba(78,115,223,0.3);
        }
</style>

<div class="container-fluid py-4">

    <div class="d-flex align-items-center flex-wrap mb-4 px-2">
        <span class="text-muted small font-weight-bold mr-3 text-uppercase"><i class="fas fa-filter mr-1"></i> Filtrele:</span>

        <a href="@Url.Action("Index", "News")"
           class="btn @(ViewBag.SelectedCategory == null ? "btn-primary active" : "btn-outline-primary") rounded-pill px-4 mr-2 mb-2 filter-btn font-weight-bold shadow-sm">
            Tümü
        </a>

        @if (ViewBag.Categories != null)
        {
            @foreach (var cat in (IEnumerable<Category>)ViewBag.Categories)
            {
                <a href="@Url.Action("Index", "News", new { categoryId = cat.Id })"
                   class="btn @(ViewBag.SelectedCategory == (int?)cat.Id ? "btn-primary active" : "btn-outline-primary") rounded-pill px-4 mr-2 mb-2 filter-btn font-weight-bold shadow-sm">
                    @cat.Name
                </a>
            }
        }
    </div>

    <div class="card premium-card">
        <div class="card-header bg-white py-4 px-5 d-flex justify-content-between align-items-center border-0">
            <h4 class="m-0 font-weight-bold text-dark"><i class="fas fa-list text-primary mr-3"></i> Haber Yönetimi</h4>
            <a href="/News/Create" class="btn btn-primary rounded-pill px-4 shadow-sm font-weight-bold py-2">
                <i class="fas fa-plus mr-2"></i> Yeni Haber Yayınla
            </a>
        </div>

        <div class="card-body px-5 pb-5 pt-0">
            <div class="table-responsive">
                <table class="premium-table">
                    <thead>
                        <tr>
                            <th>Görsel</th>
                            <th>Haber Başlığı</th>
                            <th>Kategori</th>
                            <th>Yazar</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/uploads/@item.Image" class="rounded shadow-sm border"
                                         style="width: 70px; height: 45px; object-fit: cover;"
                                         onerror="this.src='/img/no-image.png'">
                                </td>
                                <td style="max-width: 300px;">
                                    <span class="font-weight-bold text-dark d-block text-truncate">@item.Title</span>
                                </td>
                                <td>
                                    <span class="badge badge-light-primary text-primary rounded-pill px-3 py-2 border" style="background-color: rgba(78, 115, 223, 0.05); border: 1px solid rgba(78,115,223,0.1) !important;">
                                        <i class="fas fa-tag mr-1 small"></i> @(item.Category?.Name ?? "Genel")
                                    </span>
                                </td>
                                <td>
                                    <span class="text-muted small"><i class="far fa-user mr-1"></i> @item.Author</span>
                                </td>
                                <td class="text-center">
                                    @if (item.IsPublished)
                                    {
                                        <span class="badge badge-success rounded-pill px-3 py-2 shadow-sm"><i class="fas fa-check-circle mr-1"></i> Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary rounded-pill px-3 py-2 shadow-sm"><i class="fas fa-pause-circle mr-1"></i> Taslak</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center">
                                        <a href="/News/Edit/@item.Id" class="btn btn-warning btn-sm rounded-circle shadow-sm mr-2 p-2" title="Düzenle">
                                            <i class="fas fa-edit px-1"></i>
                                        </a>
                                        <button onclick="deleteNews(@item.Id)" class="btn btn-danger btn-sm rounded-circle shadow-sm p-2" title="Sil">
                                            <i class="fas fa-trash px-1"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteNews(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu haberi silmek istediğinize emin misiniz? Bu işlem geri alınamaz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e74a3b',
                cancelButtonColor: '#858796',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'Vazgeç',
                border: 'none',
                borderRadius: '25px'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        url: "/News/Delete/" + id,
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'Silindi!',
                                    text: 'Haber başarıyla kaldırıldı.',
                                    icon: 'success',
                                    borderRadius: '25px'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire('Hata!', response.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Hata!', 'Sistem kaynaklı bir sorun oluştu.', 'error');
                        }
                    });
                }
            })
        }
    </script>
}