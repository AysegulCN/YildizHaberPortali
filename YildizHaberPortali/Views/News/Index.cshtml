@model IEnumerable<YildizHaberPortali.Models.News>
@using YildizHaberPortali.Models

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = ViewData["Title"] ?? "Haber Yönetimi";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Haber Ekle
    </a>
</div>

<div class="row">

    <div class="col-lg-3">
        <div class="list-group shadow mb-4">
            <a asp-action="Index" class="list-group-item list-group-item-action @(Context.Request.Query["categoryId"].Count == 0 ? "active" : "")">
                <i class="fas fa-list-alt"></i> Tüm Haberler
            </a>
            @* ViewBagi kullanarak tüm kategorileri listeliyoruz *@
            @foreach (var cat in (IEnumerable<YildizHaberPortali.Models.Category>)ViewBag.Categories)
            {
                <a asp-action="Index" asp-route-categoryId="@cat.Id" class="list-group-item list-group-item-action @(Context.Request.Query["categoryId"] == cat.Id.ToString() ? "active" : "")">
                    <i class="fas fa-tag"></i> @cat.Name
                </a>
            }
        </div>
    </div>

    <div class="col-lg-9">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"] Tablosu</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width: 100px;">Görsel</th>
                                <th>Başlık / Kategori</th>
                                <th>Yazar / Tarih</th>
                                <th style="width: 200px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var news in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(news.ImageUrl))
                                        {
                                            <img src="@news.ImageUrl" alt="@news.Title" style="width: 80px; height: 50px; object-fit: cover;" />
                                        }
                                    </td>
                                    <td>
                                        <strong>@news.Title</strong> <br />
                                        <small class="text-muted">@news.Category.Name</small>
                                    </td>
                                    <td>@news.Author <br /> <small>@news.PublishDate.ToShortDateString()</small></td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@news.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@news.Id" class="btn btn-danger btn-sm">Sil</a>

                                        @*
                                        <button class="btn btn-sm btn-info toggle-status" data-id="@news.Id" data-status="@news.IsPublished">
                                            @(news.IsPublished ? "Gizle" : "Yayınla")
                                        </button>
                                        *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>