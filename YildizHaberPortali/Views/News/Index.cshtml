@model IEnumerable<YildizHaberPortali.Models.News>

@{
    ViewData["Title"] = "Haber Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Haber Yönetimi</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Yeni Haber Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="newsTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 100px;">Görsel</th>
                        <th>Başlık / Kategori</th>
                        <th>Yazar / Tarih</th>
                        <th style="width: 100px; text-align:center;">Durum</th>
                        <th style="width: 190px; text-align:center;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @if (string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="~/img/no-news.jpg" class="rounded border" width="80" height="60" style="object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="~/uploads/@item.Image" class="rounded border" width="80" height="60" style="object-fit: cover;" />
                                }
                            </td>

                            <td class="align-middle">
                                <h6 class="mb-1 font-weight-bold text-dark">@item.Title</h6>
                                <span class="badge badge-info font-weight-normal">
                                    <i class="fas fa-tag mr-1"></i>@(item.Category != null ? item.Category.Name : "Genel")
                                </span>
                            </td>

                            <td class="align-middle small">
                                <div class="mb-1"><i class="fas fa-user text-gray-400 mr-1"></i> @item.Author</div>
                                <div class="text-muted"><i class="far fa-clock text-gray-400 mr-1"></i> @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</div>
                            </td>

                            <td class="align-middle text-center">
                                <span id="status-badge-@item.Id" class="badge @(item.IsPublished ? "badge-success" : "badge-secondary") px-3 py-2">
                                    @(item.IsPublished ? "YAYINDA" : "PASİF")
                                </span>
                            </td>

                            <td class="align-middle text-center">
                                <div class="d-flex justify-content-center align-items-center">

                                    <div class="custom-control custom-switch mr-2" data-toggle="tooltip" title="Durumu Değiştir">
                                        <input type="checkbox" class="custom-control-input btn-toggle-status" id="switch-@item.Id" data-id="@item.Id" @(item.IsPublished ? "checked" : "")>
                                        <label class="custom-control-label" for="switch-@item.Id"></label>
                                    </div>

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-1" title="Düzenle">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    <button type="button" class="btn btn-danger btn-sm btn-delete" data-id="@item.Id" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="undo-toast" style="display:none; position: fixed; bottom: 30px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 350px;">

    <div class="bg-dark text-white shadow-lg rounded overflow-hidden" style="position: relative;">

        <div class="d-flex align-items-center justify-content-between p-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-trash-alt text-danger mr-3" style="font-size: 1.2rem;"></i>
                <div>
                    <h6 class="mb-0 font-weight-bold">Haber Siliniyor...</h6>
                    <small class="text-white-50">Geri almak için <span id="countdown-text">5</span> saniyen var.</small>
                </div>
            </div>

            <button id="btn-undo" class="btn btn-sm btn-light font-weight-bold text-dark px-3 ml-3" style="border-radius: 20px;">
                <i class="fas fa-undo mr-1"></i> GERİ AL
            </button>
        </div>

        <div class="progress" style="height: 4px; border-radius: 0; background-color: #343a40;">
            <div id="undo-progress" class="progress-bar bg-danger" role="progressbar" style="width: 100%;"></div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet">
<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

<script>
    $(document).ready(function () {

        $('#newsTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json"
            },
            "columnDefs": [
                { "orderable": false, "targets": [0, 4] } 
            ]
        });

        let deleteTimer;
        let countdownInterval;
        let rowToDelete;
        let idToDelete;

        
        $(document).on('click', '.btn-delete', function () {

            if (deleteTimer) {
                forceDeleteNow();
            }

            idToDelete = $(this).data("id");
            rowToDelete = $(this).closest("tr");

            rowToDelete.fadeOut();

            $("#undo-toast").fadeIn().css("bottom", "10px").animate({ bottom: "30px" }, 300);

            $("#undo-progress").stop().css("width", "100%");

            $("#undo-progress").animate({ width: "0%" }, 5000, "linear");

            let timeLeft = 5;
            $("#countdown-text").text(timeLeft);

            countdownInterval = setInterval(function() {
                timeLeft--;
                $("#countdown-text").text(timeLeft);
                if(timeLeft <= 0) clearInterval(countdownInterval);
            }, 1000);

            deleteTimer = setTimeout(function () {
                forceDeleteNow();
            }, 5000);
        });

        $("#btn-undo").click(function () {
            clearTimeout(deleteTimer);
            clearInterval(countdownInterval);
            $("#undo-progress").stop(); 
            deleteTimer = null;

            rowToDelete.fadeIn();

            $("#undo-toast").fadeOut();

            toastr.info("Silme işlemi iptal edildi.", "Vazgeçildi");
        });

        function forceDeleteNow() {
            if (!idToDelete) return;

            $.ajax({
                type: "POST",
                url: "/News/Delete/" + idToDelete,
                success: function (response) {
                    if (response.success) {
                        if(rowToDelete) rowToDelete.remove();
                        toastr.success("Haber başarıyla silindi.", "İşlem Tamam");
                    } else {
                        if(rowToDelete) rowToDelete.fadeIn();
                        toastr.error(response.message, "Hata");
                    }
                },
                error: function () {
                    if(rowToDelete) rowToDelete.fadeIn();
                    toastr.error("Sunucu hatası oluştu.", "Hata");
                }
            });

            $("#undo-toast").fadeOut();
            clearTimeout(deleteTimer);
            clearInterval(countdownInterval);
            deleteTimer = null;
        }

        $(document).on('change', '.btn-toggle-status', function () {
            var checkbox = $(this);
            var id = checkbox.data("id");
            var statusBadge = $("#status-badge-" + id);

            $.ajax({
                type: "POST",
                url: "/News/ToggleStatus/" + id,
                success: function (response) {
                    if (response.success) {
                        if (response.isPublished) {
                            statusBadge.removeClass("badge-secondary").addClass("badge-success").text("YAYINDA");
                            toastr.success("Haber yayına alındı.");
                        } else {
                            statusBadge.removeClass("badge-success").addClass("badge-secondary").text("PASİF");
                            toastr.warning("Haber yayından kaldırıldı.");
                        }
                    } else {
                        alert("Hata: " + response.message);
                        checkbox.prop("checked", !checkbox.prop("checked"));
                    }
                },
                error: function () {
                    alert("Sunucu hatası!");
                    checkbox.prop("checked", !checkbox.prop("checked"));
                }
            });
        });
    });
</script>