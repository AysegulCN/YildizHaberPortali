@model YildizHaberPortali.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Hesap Ayarları";

    if (User.IsInRole("Admin") || User.IsInRole("Yazar"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="@(Layout.Contains("_AdminLayout") ? "col-lg-10" : "col-lg-7")">
            <div class="card shadow-sm border-0" style="border-radius: 20px;">
                <div class="card-header @(User.IsInRole("Admin") ? "bg-gradient-primary" : "bg-primary") p-4 text-center border-0" style="border-radius: 20px 20px 0 0;">
                    <h4 class="text-white mb-0 font-weight-bold"><i class="fas fa-user-shield mr-2"></i> Profil & Güvenlik Ayarları</h4>
                </div>

                <div class="card-body p-4 p-md-5">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success border-0 shadow-sm rounded-pill px-4">@TempData["Success"]</div>
                    }

                    <form asp-action="Profile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="text-center mb-5">
                            <div class="position-relative d-inline-block">
                                <img src="~/img/@(Model.ExistingPicture ?? "undraw_profile.svg")" id="previewImg"
                                     class="rounded-circle border shadow"
                                     style="width: 130px; height: 130px; object-fit: cover;">

                                <label for="fileInput" class="btn btn-primary btn-sm rounded-circle position-absolute"
                                       style="bottom: 5px; right: 5px; width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; cursor: pointer;">
                                    <i class="fas fa-camera"></i>
                                </label>
                                <input type="file" asp-for="ImageFile" id="fileInput" class="d-none" onchange="previewFile()" accept="image/*">
                            </div>
                            <p class="text-muted small mt-2">Profil fotoğrafını değiştirmek için ikona tıkla</p>
                        </div>

                        <h5 class="text-primary font-weight-bold mb-4 border-bottom pb-2">Kişisel Bilgiler</h5>

                        <div class="form-group mb-4">
                            <label class="font-weight-bold text-dark ml-2">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control pro-input" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-4">
                                <label class="font-weight-bold text-dark ml-2">Telefon</label>
                                <input asp-for="PhoneNumber" class="form-control pro-input" placeholder="05xx..." />
                            </div>
                            <div class="col-md-6 form-group mb-4">
                                <label class="font-weight-bold text-dark ml-2">E-posta (Değiştirilemez)</label>
                                <input asp-for="Email" class="form-control bg-light border-0 rounded-pill px-4" readonly />
                            </div>
                        </div>

                        <h5 class="text-danger font-weight-bold mt-5 mb-4 border-bottom pb-2">Şifre Güncelleme</h5>

                        <div class="form-group mb-4">
                            <label class="font-weight-bold text-dark ml-2">Mevcut Şifre</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control pro-input" placeholder="Şu anki şifrenizi girin" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 form-group mb-4">
                                <label class="font-weight-bold text-dark ml-2">Yeni Şifre</label>
                                <input asp-for="NewPassword" type="password" class="form-control pro-input" placeholder="En az 6 karakter" />
                            </div>
                            <div class="col-md-6 form-group mb-4">
                                <label class="font-weight-bold text-dark ml-2">Yeni Şifre Tekrar</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control pro-input" placeholder="Tekrar yazın" />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block btn-lg rounded-pill shadow-lg font-weight-bold py-3 mt-4">
                            <i class="fas fa-save mr-2"></i> DEĞİŞİKLİKLERİ KAYDET
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewFile() {
            const preview = document.getElementById('previewImg');
            const file = document.getElementById('fileInput').files[0];
            const reader = new FileReader();

            reader.onloadend = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            }
        }
    </script>
}

<style>
    .pro-input {
        border: 2px solid #e9ecef !important;
        background-color: #fbfbfb !important;
        border-radius: 12px !important;
        padding: 12px 20px !important;
        transition: all 0.3s ease;
    }

        .pro-input:focus {
            border-color: #4e73df !important;
            background-color: #fff !important;
            box-shadow: 0 0 10px rgba(78,115,223,0.1) !important;
        }
</style>