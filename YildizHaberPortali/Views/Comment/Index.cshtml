@model IEnumerable<YildizHaberPortali.Models.Comment>

<div class="card shadow mb-4" style="border-radius: 20px; border:none;">
    <div class="card-header py-3 bg-primary" style="border-radius: 20px 20px 0 0;">
        <h6 class="m-0 font-weight-bold text-white">Canlı Yorum Denetimi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="commentTable">
                <thead class="text-primary">
                    <tr>
                        <th>Yazar</th>
                        <th>Haber</th>
                        <th>Yorum</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row-@item.Id">
                            <td><strong>@(item.UserName ?? "Anonim")</strong></td>
                            <td class="small">@item.News?.Title</td>
                            <td>@item.Text</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>
                                <span id="status-@item.Id" class="badge @(item.IsApproved ? "badge-success" : "badge-warning")">
                                    @(item.IsApproved ? "Yayında" : "Onay Bekliyor")
                                </span>
                            </td>
                            <td>
                                @if (!item.IsApproved)
                                {
                                    <button onclick="approveComment(@item.Id)" class="btn btn-success btn-circle btn-sm shadow-sm"><i class="fas fa-check"></i></button>
                                }
                                <button onclick="deleteComment(@item.Id)" class="btn btn-danger btn-circle btn-sm shadow-sm ml-1"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 🚀 AJAX ONAYLAMA FONKSİYONU
        function approveComment(id) {
            $.post("/Comment/ApproveComment", { id: id }, function (data) {
                if (data.success) {
                    $("#status-" + id).removeClass("badge-warning").addClass("badge-success").text("Yayında");
                    toastr.success("Yorum onaylandı ve yayına alındı!");
                }
            });
        }

        // 🚀 AJAX SİLME FONKSİYONU
        function deleteComment(id) {
            if(confirm("Bu yorumu silmek istediğine emin misin?")) {
                $.post("/Comment/DeleteComment", { id: id }, function (data) {
                    if (data.success) {
                        $("#row-" + id).fadeOut(500); // Satırı yavaşça yok et
                        toastr.error("Yorum başarıyla silindi.");
                    }
                });
            }
        }
    </script>
}