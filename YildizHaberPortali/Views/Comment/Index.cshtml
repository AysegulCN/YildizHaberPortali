@model IEnumerable<YildizHaberPortali.Models.Comment>
@{
    ViewData["Title"] = "Canlı Yorum Denetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4" style="border-radius: 20px; border:none;">
    <div class="card-header py-3 bg-primary text-white" style="border-radius: 20px 20px 0 0;">
        <h6 class="m-0 font-weight-bold"><i class="fas fa-comments mr-2"></i> Canlı Yorum Denetimi</h6>
    </div>
    <div class="card-body bg-white">
        <div class="table-responsive">
            <table class="table table-hover" id="commentTable">
                <thead class="text-primary">
                    <tr>
                        <th>Yazar</th>
                        <th>Haber</th>
                        <th>Yorum</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row-@item.Id">
                            <td><strong>@(item.UserName ?? "Anonim")</strong></td>
                            <td class="small">@item.News?.Title</td>
                            <td>@item.Text</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>
                                <span id="status-@item.Id" class="badge @(item.IsApproved ? "badge-success" : "badge-warning")">
                                    @(item.IsApproved ? "Yayında" : "Onay Bekliyor")
                                </span>
                            </td>
                            <td>
                                @if (!item.IsApproved)
                                {
                                    <button onclick="approveComment(@item.Id)" class="btn btn-success btn-sm btn-circle shadow-sm" title="Onayla">
                                        <i class="fas fa-check"></i>
                                    </button>
                                }
                                <button onclick="deleteComment(@item.Id)" class="btn btn-danger btn-sm btn-circle shadow-sm ml-1" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <script>
        function approveComment(id) {
            $.post("/Comment/Approve", { id: id }, function (data) {
                if (data.success) {
                    $("#status-" + id).removeClass("badge-warning").addClass("badge-success").text("Yayında");
                    $("#row-" + id + " .btn-success").fadeOut(); 
                    toastr.success("Yorum başarıyla onaylandı!");
                } else {
                    toastr.error("Bir hata oluştu.");
                }
            });
        }

        function deleteComment(id) {
            if(confirm("Bu yorumu tamamen silmek istediğine emin misin?")) {
                $.post("/Comment/Delete", { id: id }, function (data) {
                    if (data.success) {
                        $("#row-" + id).fadeOut(500, function() { $(this).remove(); });
                        toastr.warning("Yorum sistemden silindi.");
                    } else {
                        toastr.error("Yorum silinemedi.");
                    }
                });
            }
        }
    </script>
}