@model IEnumerable<Comment>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h3 class="font-weight-bold text-primary mb-4">Canlı Yorum Denetimi</h3>

    <div class="card shadow premium-card">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Yazar</th>
                        <th>Haber</th>
                        <th>Yorum</th>
                        <th>Tarih</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* "AuthorName" yerine "User.FullName" kullanıyoruz *@
                            <td class="font-weight-bold">@(item.User?.FullName ?? "Silinmiş Kullanıcı")</td>
                            @* "Content" yerine "Text" kullanıyoruz *@
                            <td style="max-width:300px;">@item.Text</td>
                            @* "CommentDate" yerine "CreatedDate" kullanıyoruz *@
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            @* ... *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>