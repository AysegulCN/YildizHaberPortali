@model IEnumerable<YildizHaberPortali.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* TARZ 2: PREMIUM TASARIM SİSTEMİ */
    .premium-card {
        border-radius: 20px;
        border: none;
    }

    .premium-table {
        border-collapse: separate;
        border-spacing: 0 12px;
        width: 100%;
    }

        .premium-table tr {
            background: #fff;
            box-shadow: 0 4px 10px rgba(0,0,0,0.03);
            border-radius: 15px;
            transition: all 0.3s ease;
        }

            .premium-table tr:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(78,115,223,0.1);
            }

        .premium-table td, .premium-table th {
            border: none !important;
            padding: 20px 15px !important;
            vertical-align: middle !important;
        }

    /* Modern Rozetler ve Butonlar */
    .role-badge {
        border-radius: 10px;
        padding: 6px 15px;
        font-weight: 600;
        font-size: 0.75rem;
    }

    .btn-round {
        border-radius: 50px;
        font-weight: 600;
        padding: 8px 20px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: 0.3s;
    }

        .btn-round:hover {
            transform: scale(1.05);
        }
</style>



<div class="container-fluid py-4">
    <div class="card shadow border-0" style="border-radius: 25px; overflow: hidden;">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="m-0 font-weight-bold text-primary"><i class="fas fa-users mr-2"></i> Sistem Kullanıcıları</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted">
                        <tr>
                            <th class="border-0 px-4 py-3">KULLANICI</th>
                            <th class="border-0 py-3">E-POSTA</th>
                            <th class="border-0 py-3">ROLLER</th>
                            <th class="border-0 py-3 text-center">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="px-4 font-weight-bold">@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge badge-primary rounded-pill px-3 shadow-sm">@role</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a href="/User/Edit/@user.UserId" class="btn btn-warning btn-sm rounded-circle shadow-sm mr-2"><i class="fas fa-edit"></i></a>
                                    <button class="btn btn-danger btn-sm rounded-circle shadow-sm"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDeleteUser(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kullanıcı sistemden tamamen silinecektir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e74a3b',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'Vazgeç',
                borderRadius: '15px'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/User/DeleteAjax/' + id, function (res) {
                        if (res.success) {
                            $('#user_' + id).fadeOut(400, function() { $(this).remove(); });

                            Swal.fire({
                                icon: 'success',
                                title: 'Kullanıcı Silindi',
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 3000,
                                timerProgressBar: true
                            });
                        } else {
                            Swal.fire('Hata!', res.message, 'error');
                        }
                    });
                }
            })
        }
    </script>
}