@model IEnumerable<YildizHaberPortali.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3"><h6 class="m-0 font-weight-bold text-primary">Sistemdeki Tüm Kullanıcılar</h6></div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr><th>Email</th><th>Kullanıcı Adı</th><th>Roller</th><th>İşlemler</th></tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.UserName</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td><a asp-controller="User" asp-action="ManageRoles" asp-route-userId="@user.UserId" class="btn btn-info btn-sm">Rol Ata</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>