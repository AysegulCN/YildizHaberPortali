@model IEnumerable<YildizHaberPortali.Models.UserRolesViewModel>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .premium-card {
        border-radius: 20px;
        border: none;
    }

    .premium-table {
        border-collapse: separate;
        border-spacing: 0 12px;
        width: 100%;
    }

        .premium-table thead th {
            border: none;
            color: #858796;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 1px;
            padding: 0 25px;
        }

        .premium-table tr {
            background: #fff;
            box-shadow: 0 4px 10px rgba(0,0,0,0.03);
            border-radius: 15px;
            transition: all 0.3s ease;
        }

            .premium-table tr:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(78,115,223,0.1);
            }

        .premium-table td, .premium-table th {
            border: none !important;
            padding: 15px 25px !important;
            vertical-align: middle !important;
        }

            .premium-table td:first-child {
                border-radius: 15px 0 0 15px;
            }

            .premium-table td:last-child {
                border-radius: 0 15px 15px 0;
            }

    .role-badge {
        border-radius: 10px;
        padding: 6px 15px;
        font-weight: 600;
        font-size: 0.75rem;
    }
</style>

<div class="container-fluid py-4">
    <div class="card shadow border-0" style="border-radius: 25px; overflow: hidden;">
        <div class="card-header bg-white py-4 px-5 d-flex justify-content-between align-items-center border-0">
            <h4 class="m-0 font-weight-bold text-dark"><i class="fas fa-users-cog text-primary mr-3"></i> Sistem Kullanıcıları</h4>
        </div>

        <div class="card-body px-5 pb-5 pt-0">
            <div class="table-responsive">
                <table class="premium-table">
                    <thead>
                        <tr>
                            <th>Kullanıcı</th>
                            <th>E-Posta</th>
                            <th>Roller</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr id="user_@user.UserId">
                                <td class="font-weight-bold text-dark">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle mr-3 bg-primary text-white d-flex align-items-center justify-content-center rounded-circle" style="width: 40px; height: 40px; font-size: 1.2rem;">
                                            @user.UserName.Substring(0, 1).ToUpper()
                                        </div>
                                        @user.UserName
                                    </div>
                                </td>
                                <td class="text-muted">@user.Email</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge badge-primary rounded-pill px-3 py-2 shadow-sm mr-1">
                                            <i class="fas fa-user-shield mr-1 small"></i> @role
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center">
                                        <a href="/User/Edit/@user.UserId" class="btn btn-warning btn-sm rounded-circle shadow-sm mr-2 p-2" title="Düzenle">
                                            <i class="fas fa-edit px-1"></i>
                                        </a>

                                        <button onclick="confirmDeleteUser('@user.UserId')" class="btn btn-danger btn-sm rounded-circle shadow-sm p-2" title="Sil">
                                            <i class="fas fa-trash px-1"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDeleteUser(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kullanıcı ve tüm yetkileri sistemden kaldırılacaktır!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#e74a3b',
                cancelButtonColor: '#858796',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'Vazgeç',
                borderRadius: '20px'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/User/Delete/' + id, function (res) {
                        if (res.success) {
                            $('#user_' + id).fadeOut(400, function() {
                                $(this).remove();
                            });

                            Swal.fire({
                                icon: 'success',
                                title: 'Kullanıcı Silindi',
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 3000,
                                timerProgressBar: true
                            });
                        } else {
                            Swal.fire('Hata!', res.message, 'error');
                        }
                    });
                }
            })
        }
    </script>
}