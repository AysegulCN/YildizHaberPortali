@model YildizHaberPortali.Models.NewsDetailViewModel
@{
    ViewData["Title"] = Model.News.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">

            <h1 class="font-weight-bold text-dark mb-4 display-4">@Model.News.Title</h1>
            <div class="d-flex align-items-center mb-4 text-muted small border-bottom pb-3">
                <span class="mr-4"><i class="fas fa-user-edit mr-2 text-primary"></i>@Model.News.Author</span>
                <span><i class="fas fa-calendar-alt mr-2 text-primary"></i>@Model.News.CreatedDate.ToString("dd MMMM yyyy")</span>
            </div>

            <div class="mb-5 shadow-lg" style="border-radius: 35px; overflow: hidden; max-height: 550px;">
                <img src="~/uploads/@Model.News.Image" class="w-100 h-100" style="object-fit: cover;" onerror="this.src='/img/no-image.png'">
            </div>

            <div class="content text-dark mb-5" style="line-height: 2; font-size: 1.2rem;">
                @Html.Raw(Model.News.Content)
            </div>

            <hr class="my-5 border-0 bg-light" style="height: 2px;">

            <div class="comments-area p-5 shadow-sm bg-light" style="border-radius: 30px;">
                <h3 class="font-weight-bold mb-5"><i class="fas fa-comments text-primary mr-3"></i>Yorumlar (@Model.Comments.Count)</h3>

                @foreach (var comment in Model.Comments)
                {
                    <div class="media mb-4 p-4 bg-white shadow-sm border-0" style="border-radius: 20px;">
                        <div class="media-body">
                            <h6 class="mt-0 font-weight-bold text-primary">@comment.UserName <small class="text-muted ml-2">@comment.CreatedDate.ToShortDateString()</small></h6>
                            <p class="mb-0 text-dark">@comment.Text</p>
                        </div>
                    </div>
                }

                <div class="mt-5 p-4 bg-white border" style="border-radius: 25px;">
                    <h5 class="font-weight-bold mb-4">Sen de düşüncelerini paylaş</h5>
                    <form asp-action="PostComment" method="post">
                        <input type="hidden" name="NewsId" value="@Model.News.Id" />
                        <div class="form-group mb-3">
                            <input type="text" name="UserName" class="form-control rounded-pill px-4" placeholder="Adınız Soyadınız" required>
                        </div>
                        <div class="form-group mb-4">
                            <textarea name="Text" class="form-control" style="border-radius: 20px;" rows="4" placeholder="Yorumunuzu buraya yazın..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow font-weight-bold">Yorumu Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>