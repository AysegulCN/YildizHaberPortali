@model IEnumerable<YildizHaberPortali.Models.News>
@using YildizHaberPortali.Models

@{
    ViewData["Title"] = "Son Haberler";
}

<h2 class="mb-4">Son Haberler</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(news.ImageUrl))
                    {
                        <img src="@news.ImageUrl" class="card-img-top" alt="@news.Title">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text"><small class="text-muted">@news.PublishDate.ToShortDateString() - @news.Category?.Name</small></p>
                        <a asp-controller="News" asp-action="Details" asp-route-id="@news.Id" class="btn btn-sm btn-outline-primary">Haberi Oku</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Henüz hiç haber eklenmemiş. Lütfen Yönetici Panelinden haber ekleyin.
    </div>
}