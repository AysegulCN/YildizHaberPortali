@page
@model IndexModel
@{
    ViewData["Title"] = "Profil Yönetimi";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a asp-page="./Index" class="list-group-item list-group-item-action active bg-warning border-warning">
                    <i class="fas fa-user mr-2"></i> Profil Bilgileri
                </a>
                <a asp-page="./ChangePassword" class="list-group-item list-group-item-action">
                    <i class="fas fa-key mr-2"></i> Şifre Değiştir
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 text-gray-800">Profil Bilgileri</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        var statusClass = Model.StatusMessage.StartsWith("Hata") ? "alert-danger" : "alert-success";
                        <div class="alert @statusClass">@Model.StatusMessage</div>
                    }

                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.FirstName" class="form-label font-weight-bold">Ad</label>
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="Adınız" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Input.LastName" class="form-label font-weight-bold">Soyad</label>
                                    <input asp-for="Input.LastName" class="form-control" placeholder="Soyadınız" />
                                    <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Email" class="form-label font-weight-bold">E-posta Adresi</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-envelope text-gray-400"></i></span>
                                <input asp-for="Input.Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Input.PhoneNumber" class="form-label font-weight-bold">Telefon Numarası</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-phone text-gray-400"></i></span>
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="05XX XXX XX XX" />
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="btn btn-warning btn-block font-weight-bold text-white">
                            <i class="fas fa-save mr-2"></i> DEĞİŞİKLİKLERİ KAYDET
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>