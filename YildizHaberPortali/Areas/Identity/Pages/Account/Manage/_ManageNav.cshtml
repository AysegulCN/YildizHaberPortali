@using YildizHaberPortali.Areas.Identity.Pages.Account.Manage
@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="list-group">
    <a id="profile" asp-page="./Index" class="list-group-item list-group-item-action @ManageNavPages.IndexNavClass(ViewContext)">
        <i class="fas fa-user mr-2"></i> Profil Bilgileri
    </a>

    <a id="change-password" asp-page="./ChangePassword" class="list-group-item list-group-item-action @ManageNavPages.ChangePasswordNavClass(ViewContext)">
        <i class="fas fa-key mr-2"></i> Şifre Değiştir
    </a>
</ul>