@page
@model YildizHaberPortali.Areas.Identity.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null; /* Giriş sayfası gibi tam ekran özel tasarım */
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Yıldız Haber</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="https://startbootstrap.github.io/startbootstrap-sb-admin-2/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
        body {
            /* Giriş Sayfasıyla Aynı Koyu Gradient */
            background: linear-gradient(135deg, #1c1e21 0%, #29323c 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-register {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.3);
            background-color: white;
            max-width: 500px;
            width: 100%;
        }

        .logo-circle {
            width: 80px;
            height: 80px;
            background-color: #f6c23e; /* SARI LOGO */
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px auto;
            color: white;
            font-size: 35px;
            box-shadow: 0 4px 10px rgba(246, 194, 62, 0.5);
        }

        .form-control-user {
            border-radius: 50px;
            padding: 1.5rem 1.5rem;
            height: auto;
        }

        .btn-register {
            border-radius: 50px;
            padding: 0.75rem 1rem;
            font-weight: bold;
            font-size: 1.1rem;
            background-color: #f6c23e; /* SARI BUTON */
            border-color: #f6c23e;
            color: white;
        }

            .btn-register:hover {
                background-color: #d4a72c;
                border-color: #d4a72c;
                color: white;
            }
    </style>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-7 col-md-9">
                <div class="card card-register o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="p-5">

                            <div class="text-center mb-4">
                                <div class="logo-circle">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <h1 class="h4 text-gray-900 font-weight-bold">Aramıza Katıl!</h1>
                                <p class="mb-4 text-muted small">Haberleri kaçırma, hemen hesabını oluştur.</p>
                            </div>

                            <form class="user" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3 small"></div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Input.FirstName" class="form-control form-control-user" placeholder="Adınız">
                                        <span asp-validation-for="Input.FirstName" class="text-danger ml-3 small"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.LastName" class="form-control form-control-user" placeholder="Soyadınız">
                                        <span asp-validation-for="Input.LastName" class="text-danger ml-3 small"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Input.Email" class="form-control form-control-user" placeholder="E-posta Adresi" autocomplete="username">
                                    <span asp-validation-for="Input.Email" class="text-danger ml-3 small"></span>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input asp-for="Input.Password" type="password" class="form-control form-control-user" placeholder="Şifre" autocomplete="new-password">
                                        <span asp-validation-for="Input.Password" class="text-danger ml-3 small"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control form-control-user" placeholder="Şifre Tekrar" autocomplete="new-password">
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger ml-3 small"></span>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-register btn-user btn-block">
                                    HESABI OLUŞTUR
                                </button>
                            </form>

                            <hr>

                            <div class="text-center">
                                <a class="small font-weight-bold text-secondary" asp-page="./Login">
                                    Zaten bir hesabın var mı? <span class="text-warning">Giriş Yap!</span>
                                </a>
                            </div>
                            <div class="text-center mt-2">
                                <a class="small text-gray-500" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-arrow-left"></i> Siteye Geri Dön
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

</body>
</html>