@page
@model YildizHaberPortali.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Kayıt sayfasına özel stiller */
    .register-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        overflow: hidden;
        background-color: #fff;
    }

    .register-header {
        background: #fff;
        padding: 30px 20px 10px;
        text-align: center;
    }

    .form-control-custom {
        border-radius: 50px;
        padding: 12px 20px;
        background-color: #f8f9fa;
        border: 1px solid #eee;
        height: 50px;
    }

        .form-control-custom:focus {
            background-color: #fff;
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

    .btn-yildiz {
        border-radius: 50px;
        padding: 12px;
        font-weight: bold;
        font-size: 16px;
        background-color: #ffc107;
        border: none;
        color: #fff;
        transition: all 0.3s;
    }

        .btn-yildiz:hover {
            background-color: #e0a800;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">

            <div class="card register-card">

                <div class="register-header">
                    <div class="mb-3">
                        <span class="fa-stack fa-2x">
                            <i class="fas fa-circle fa-stack-2x text-warning"></i>
                            <i class="fas fa-user-plus fa-stack-1x fa-inverse"></i>
                        </span>
                    </div>
                    <h3 class="font-weight-bold text-dark">Aramıza Katıl</h3>
                    <p class="text-muted small">Yıldız Haber ayrıcalıklarından yararlanmak için hesap oluştur.</p>
                </div>

                <div class="card-body p-4 pt-0">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger small text-center mb-3"></div>

                        <div class="form-row mb-3">
                            <div class="col">
                                <input asp-for="Input.FirstName" class="form-control form-control-custom" placeholder="Adınız" />
                                <span asp-validation-for="Input.FirstName" class="text-danger small ml-2"></span>
                            </div>
                            <div class="col">
                                <input asp-for="Input.LastName" class="form-control form-control-custom" placeholder="Soyadınız" />
                                <span asp-validation-for="Input.LastName" class="text-danger small ml-2"></span>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="Input.Email" class="form-control form-control-custom" placeholder="E-Posta Adresi" />
                            <span asp-validation-for="Input.Email" class="text-danger small ml-2"></span>
                        </div>

                        <div class="form-group mb-3">
                            <input asp-for="Input.Password" class="form-control form-control-custom" placeholder="Şifre" />
                            <span asp-validation-for="Input.Password" class="text-danger small ml-2"></span>
                        </div>

                        <div class="form-group mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-custom" placeholder="Şifre (Tekrar)" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small ml-2"></span>
                        </div>

                        <button type="submit" class="btn btn-yildiz btn-block">
                            HESABI OLUŞTUR
                        </button>

                    </form>
                </div>

                <div class="card-footer bg-white text-center border-0 pb-4">
                    <p class="small text-muted mb-0">Zaten hesabın var mı?</p>
                    <a asp-page="./Login" class="font-weight-bold text-warning" style="text-decoration:none;">
                        Giriş Yap <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}